{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "airbnb/base",
    "plugin:react/recommended"
  ],
  "rules": {
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": [2],
    "object-curly-spacing": [0],
    "import/no-extraneous-dependencies": [0],
    "import/no-unresolved": [0],
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "id-length": [
      2,
      {
        "exceptions": [
          "_",
          "$"
        ]
      }
    ]
  }
}
